<div class="container-fluid">
  <%= form_for(@snippet) do |f| %>

  <div class="row">
    <div class="col-sm-12">
      <% if @snippet.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>
          <ul>
            <% @snippet.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="field height=50%">
        <%= f.label :name %><br>
        <%= f.text_field :name, autofocus: true %>
      </div>
      
      <div class="field">
        <%= f.label :user_id %><span><strong>&nbspID</strong></span><br>
        <%= f.text_field :user_id, value: current_user.id, readonly: false %><br/>
        <%= label_tag "User name" %><br/>
        <%= text_field_tag "username", current_user.username, readonly: true %>
      </div>
    </div>
    
    <div class="col-sm-3 right">
      <div class="field">
        <%= f.label :content %><br>
        <%= f.text_area :content %>
      </div>
    </div>
    
    <div class="col-sm-6 right">
    </div>
    
    <div class="col-sm-12">    
      <div class="actions">
        <br/>
        <%= f.submit "Save", class: 'button-md' %>
        <%= link_to 'Back', snippets_path, :class => 'link-btn-md' %>
      </div>
    </div>
      
  <% end %>
  
</div>